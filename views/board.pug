extends layout

block content
  h1= title
  p #{query.rows} and #{query.cols}
  - let rows = Number(query.rows);
  - let col = Number(query.cols);
  if !(Number.isInteger(rows) && Number.isInteger(col))
    p Either rows and colums are not an integer
  else if rows > 10 || rows < 1
    p Rows out of range
  else if col > 10 || col < 1
    p Colums out of range
  else
    table#outer
    - for(let i =0;i< rows; i++){
      tr#middle
      <br>
        - for(let j =0;j<col;j++){
          td= (i==j)? 1 : (j<i)?0:(j-i+1)
          - }
    - }